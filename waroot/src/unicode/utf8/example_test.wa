func ExampleDecodeLastRune {
	b := []byte("Hello, 世界")

	for len(b) > 0 {
		r, size := DecodeLastRune(b)
		println(r, size)

		b = b[:len(b)-size]
	}
	// Output:
	// 界 3
	// 世 3
	//   1
	// , 1
	// o 1
	// l 1
	// l 1
	// e 1
	// H 1
}

