func ExampleValid {
	valid := []byte("Hello, 世界")
	invalid := []byte{0xff, 0xfe, 0xfd}

	println(Valid(valid))
	println(Valid(invalid))
	// Output:
	// true
	// false
}

func ExampleValidRune {
	valid := 'a'
	invalid := rune(0xfffffff)

	println(ValidRune(valid))
