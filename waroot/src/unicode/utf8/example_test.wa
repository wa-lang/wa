func ExampleDecodeRune {
	b := []byte("Hello, 世界")

	for len(b) > 0 {
		r, size := DecodeRune(b)
		println(r, size)

		b = b[size:]
	}
	// Output:
	// H 1
	// e 1
	// l 1
	// l 1
	// o 1
	// , 1
	//   1
	// 世 3
	// 界 3
}

