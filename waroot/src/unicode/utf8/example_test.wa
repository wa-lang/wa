func ExampleEncodeRune {
	r := '世'
	buf := make([]byte, 3)

	n := EncodeRune(buf, r)

	print("[")
	for i, v := range buf {
		if i > 0 {
			print(" ")
		}
		print(v)
	}
	println("]")
	println(n)

	// Output:
	// [228 184 150]
	// 3
}

func ExampleFullRune {
	buf := []byte{228, 184, 150} // 世
	println(FullRune(buf))
	println(FullRune(buf[:2]))
	// Output:
