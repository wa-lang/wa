const (
	tracingEnabled = false
	soundEnabled   = true
	musicEnabled   = true
)

global ui: *UI = nil

//wa:export start
func Start {
	seed := u32(478194671)

	ui = NewUI(game.New(seed), palettes.IceCreamGB)
}

//wa:export update
func Update {
	ui.frame++
	ui.show()
	ui.sound()
	ui.music()
	ui.input()
}

type UI :struct {
	game.Board

	frame:  uint
	oldPad: u8
	pal:    [4]u32
}

func NewUI(board: game.Board, pal: [4]u32) => *UI {
	return &UI{
		Board: board,
		pal:   pal,
	}
}

