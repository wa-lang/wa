{{if .IsP5App}}
import "js/p5"

func init {
	p5.CreateCanvas(400, 400)
	p5.Background(220, 220, 220)
}

func Draw {
	if p5.MouseIsPressed {
		p5.Ellipse(p5.MouseX, p5.MouseY, 80, 80)
	} else {
		p5.Ellipse(p5.MouseX, p5.MouseY, 40, 40)
	}
}
{{else}}
func main {
	println("你好，凹语言！")
	println(sum(100))
}

func sum(n: int) => int {
	v: int
	for i := 1; i <= n; i++ {
		v += i
	}
	return v
}
{{end}}